[Unit]
Description=Node Exporter
After=network.target
[Service]
User=nodeusr
Group=nodeusr
Type=simple
ExecStart=/var/lib/node_exporter/node_exporter-{{ node_exporter_version }}.linux-amd64/node_exporter --collector.textfile.directory /var/lib/node_exporter/textfile_collector --collector.processes --collector.systemd --collector.filesystem.fs-types-exclude {{ node_exporter_excluded_filesystems }}
[Install]
WantedBy=multi-user.target
